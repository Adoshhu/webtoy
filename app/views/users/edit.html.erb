<div class= "container"><h1>Update User</h1></div>

  <section class="container">
    <%= form_for (current_user) do |f| %>
      <div class="form-group">
        <%= f.label :username %><br/>
        <%= f.text_field :username, class: "form-control" %>
      </div>
     
      <div class="form-group">
        <%= f.label :email %><br/>
        <%= f.email_field :email, class: "form-control" %>
      </div>
     
      <div class="form-group">
        <%= f.label :password %><br/>
        <%= f.password_field :password, class: "form-control" %>
      </div>  
    </br>
      <div class="form-group">
        <%= f.submit "Update", class:"btn btn-outline-primary" %>
        <%= link_to 'Back', toys_path, class:"btn btn-outline-primary" %>
      </div>     
    <% end %>
    <div class="container">
    <%= button_to 'Delete User', delete_user_path(@user),class:"btn btn-outline-danger", method: :delete %>
    </div> 
  </section>